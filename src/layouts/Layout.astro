---
import '@/styles/global.css';

export interface Props {
    title: string;
    showUserInfo?: boolean;
}

const { title, showUserInfo = true } = Astro.props;
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
</head>
<body class="bg-gradient-to-br from-green-50 to-green-100 min-h-screen">
    
<!-- Navegación -->
<nav class="bg-white border-gray-200 dark:bg-gray-900">
    <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl p-4 gap-2">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
            <!-- <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo" /> -->
            <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">🌱 Sabor do Campo</span>
        </a>
        {showUserInfo && (
            <div id="userInfo" class="flex items-center space-x-6 rtl:space-x-reverse ms-auto">
                <!-- La información del usuario se cargará aquí -->
            </div>
        )}
    </div>
</nav>
<nav class="bg-gray-50 dark:bg-gray-700">
    <div class="max-w-screen-xl px-4 py-3 mx-auto">
        <div class="flex items-center">
            <ul class="flex flex-row font-medium mt-0 space-x-8 rtl:space-x-reverse text-sm">
                <li>
                    <a href="/" class="text-gray-900 dark:text-white hover:underline" aria-current="page">🧮 Calculadora</a>
                </li>
                <li>
                    <a href="/productos" class="text-gray-900 dark:text-white hover:underline">📦 Productos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    


    <!-- Contenido Principal -->
    <main>
        <slot />
    </main>

    <script>
        import AuthService from '@/services/authService.js';

        // Verificar si el usuario está logueado y mostrar información
        function checkUserStatus() {
            if (AuthService.isAuthenticated()) {
                const userInfo = AuthService.getCurrentUser();
                updateUserInfo(userInfo.username);
            }
        }

        // Actualizar información del usuario en la interfaz
        function updateUserInfo(username) {
            const userInfo = document.getElementById('userInfo');
            if (userInfo) {
                userInfo.innerHTML = `
                    <a href="tel:5541251234" class="text-sm  text-gray-500 dark:text-white hover:underline">👤 ${username}</a>
                    <button onclick="logout()" class="text-sm  text-blue-600 dark:text-blue-500 hover:underline">Cerrar Sesión</button>
                `;
            }
        }

        // Función de logout
        function logout() {
            if (confirm('¿Estás seguro de que quieres cerrar sesión?')) {
                AuthService.logout();
                window.location.href = '/login';
            }
        }

        // Verificar estado del usuario al cargar (solo si showUserInfo está habilitado)
        const showUserInfo = document.getElementById('userInfo');
        if (showUserInfo) {
            checkUserStatus();
        }

        // Hacer las funciones globales para que puedan ser llamadas desde otras páginas
        window.checkUserStatus = checkUserStatus;
        window.updateUserInfo = updateUserInfo;
        window.logout = logout;
    </script>
</body>
</html>